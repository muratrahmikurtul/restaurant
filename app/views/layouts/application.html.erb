<!DOCTYPE html>
<html>
  <head>
    <title>Reservation</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if current_owner.present? %>
        <li><a href="#"><%= current_owner.email %></a></li>
        <li><%= link_to "Logout", destroy_owner_session_path, method: :delete %></li>
    <% else %>
        <li><%= link_to "Login as Owner", new_owner_session_path %></li>
        <li><%= link_to "Register as Owner", new_owner_registration_path %></li>
    <% end %>
    <% if current_customer.present? %>
        <li><a href="#"><%= current_customer.email %></a></li>
        <li><%= link_to "Logout", destroy_customer_session_path, method: :delete %></li>
    <% else %>
        <li><%= link_to "Login as Customer", new_customer_session_path %></li>
        <li><%= link_to "Register as Customer ", new_customer_registration_path %></li>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
